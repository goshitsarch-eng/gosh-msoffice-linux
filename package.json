{
  "name": "ms-365-electron",
  "version": "2.2.0",
  "type": "module",
  "description": "Unofficial Microsoft 365 Web Desktop Wrapper made with Electron",
  "main": "./app/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/goshitsarch-eng/gosh-msoffice-linux.git"
  },
  "author": {
    "name": "Goshitsarch",
    "email": "gosh@hey.com"
  },
  "build": {
    "extraFiles": [
      "LICENSE"
    ],
    "appId": "io.github.goshitsarch_eng.msoffice_linux",
    "productName": "MS-365-Electron",
    "artifactName": "MS-365-Electron-v${version}-${os}-${arch}.${ext}",
    "linux": {
      "category": "Office",
      "icon": "./assets/icons/png",
      "executableName": "ms-365-electron",
      "maintainer": "Goshitsarch <gosh@hey.com>",
      "target": [
        { "target": "deb", "arch": ["x64", "arm64"] },
        { "target": "rpm", "arch": ["x64", "arm64"] },
        { "target": "tar.gz", "arch": ["x64", "arm64"] },
        { "target": "AppImage", "arch": ["x64", "arm64"] }
      ]
    },
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts",
        "filter": ["**/*.ttf", "OFL.txt"]
      }
    ],
    "directories": {
      "output": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "start:wayland": "electron . --ozone-platform-hint=auto",
    "dist:x64": "electron-builder --linux --x64",
    "dist:arm64": "electron-builder --linux --arm64",
    "dist:all": "electron-builder --linux --x64 --arm64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prettier-eslint": "^16.1.2"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.14.1",
    "@xhayper/discord-rpc": "^1.3.0",
    "axios": "^1.13.5",
    "check-internet-connected": "^2.0.6",
    "electron-context-menu": "^4.1.1",
    "electron-dl": "^4.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.8.3"
  },
  "packageManager": "yarn@4.7.0"
}
